{
	"name": "wikimedia-portals",
	"private": true,
	"scripts": {
		"start": "gulp update-stats && gulp watch --portal=${npm_config_portal} & npm run dev-server",
		"dev-server": "es-dev-server --app-index ./src/${npm_config_portal}/index.html --preserve-symlinks=true --watch --open",
		"test": "npm -s run lint:styles && npm -s run lint:js",
		"lint:fix": "npm -s run lint:styles -- --fix && npm -s run lint:js -- --fix",
		"lint:styles": "stylelint -f verbose \"src/*/assets/postcss/*.css\"",
		"lint:js": "eslint \"**/*.{js,json,yaml}\"",
		"build-all-portals": "npm -s run test && gulp -- update-stats && gulp --portal=wikimedia.org -- default && gulp --portal=wikipedia.org -- default && gulp --portal=wiktionary.org -- default && gulp --portal=wikibooks.org -- default && gulp --portal=wikiquote.org -- default && gulp --portal=wikinews.org -- default &&  gulp --portal=wikiversity.org -- default && gulp --portal=wikivoyage.org -- default"
	},
	"pre-commit": [
		"test"
	],
	"devDependencies": {
		"@wikimedia/codex-design-tokens": "1.20.1",
		"@wikimedia/language-data": "^1.1.8",
		"bluebird": "^3.7.2",
		"browserslist-config-wikimedia": "0.7.0",
		"bundlesize": "^0.18.1",
		"cssnano": "^4.1.10",
		"es-dev-server": "^1.54.1",
		"eslint-config-wikimedia": "0.28.2",
		"eslint-plugin-unicorn": "40.1.0",
		"eslint-plugin-yml": "0.13.0",
		"glob": "^7.2.3",
		"gulp": "^4.0.2",
		"gulp-compile-handlebars": "^0.6.1",
		"gulp-htmlmin": "^5.0.1",
		"gulp-if": "^3.0.0",
		"gulp-inline": "^0.1.3",
		"gulp-load-plugins": "^2.0.3",
		"gulp-postcss": "^8.0.0",
		"gulp-rename": "^2.0.0",
		"gulp-rev": "^9.0.0",
		"gulp-rev-replace": "^0.4.4",
		"gulp-slash": "^1.1.3",
		"gulp-svg-sprite": "^1.5.0",
		"gulp-tap": "^2.0.0",
		"gulp-uglify": "^3.0.2",
		"gulp-useref": "^4.0.1",
		"handlebars": "^4.7.6",
		"postcss-cssnext": "^3.1.0",
		"postcss-import": "^12.0.1",
		"postcss-reporter": "^6.0.1",
		"pre-commit": "1.2.2",
		"stylelint-config-wikimedia": "0.18.0",
		"sync-request": "^6.1.0",
		"yargs": "^15.3.1"
	},
	"bundlesize": [
		{
			"path": "prod/wikipedia.org/assets/js/index-*.js",
			"maxSize": "9.0KB"
		},
		{
			"path": "prod/wikipedia.org/assets/js/gt-ie9-*.js",
			"maxSize": "0.4KB"
		}
	]
}
