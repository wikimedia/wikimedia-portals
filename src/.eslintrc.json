{
	"root": true,
	"overrides": [
		{
			"files": [ "**/assets/**" ],
			"extends": [
				"wikimedia/client/common",
				"wikimedia/language/es2018",
				"wikimedia/mediawiki"
			],
			"rules": {
				"no-var": "off",
				"mediawiki/valid-package-file-require": "off",
				"mediawiki/class-doc": "off",
				"mediawiki/no-cookie": "off",
				"mediawiki/no-storage": "off"
			}
		},
		{
			"files": [ "*", "**/*" ],
			"excludedFiles": [ "**/assets/**" ],
			"extends": [ "wikimedia/server" ],
			"rules": {
				"capitalized-comments": [
					"error",
					"always",
					{
						"ignoreConsecutiveComments": true
					}
				],
				"no-var": "off",
				"es-x/no-rest-spread-properties": "off"
			}
		}
	]
}
